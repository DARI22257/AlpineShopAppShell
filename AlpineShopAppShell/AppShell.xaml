<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:page="clr-namespace:AlpineShop.Page"
       x:Class="AlpineShopAppShell.AppShell"
       FlyoutBehavior="Flyout">

    <FlyoutItem Title="Каталог" Route="catalog">
        <ShellContent ContentTemplate="{DataTemplate page:Catalog}" />
    </FlyoutItem>

    <FlyoutItem Title="Корзина" Route="cart">
        <ShellContent ContentTemplate="{DataTemplate page:CartPage}" />
    </FlyoutItem>

    <FlyoutItem x:Name="AdminAddItem" Title="Добавить товар" Route="addproduct">
        <ShellContent ContentTemplate="{DataTemplate page:AddProduct}" />
    </FlyoutItem>

    <MenuItem Text="Выйти" Clicked="OnLogoutClicked" />
</Shell>
