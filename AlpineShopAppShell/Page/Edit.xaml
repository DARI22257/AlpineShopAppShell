<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlpineShop.Page.Edit"
             Title="Edit">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Entry x:Name="NameEntry" Placeholder="Название товара" />
            <Entry x:Name="CategoryEntry" Placeholder="Категория" />
            <Entry x:Name="PriceEntry" Placeholder="Цена" Keyboard="Numeric" />

            <Image x:Name="PreviewImage" HeightRequest="160"  Aspect="AspectFill" BackgroundColor="LightGray"/>

            <Button Text="Выбрать/заменить фото" Clicked="OnPickPhotoClicked"/>

            <Button Text="Сохранить изменения" Clicked="OnSaveClicked" />
            <Label x:Name="InfoLabel" TextColor="Red"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>